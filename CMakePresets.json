{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "description": "Sets generator, build and install directory",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}"
    },
    {
      "name": "Windowx-x64-MSVC",
      "displayName": "Windows x64 MSVC",
      "description": "Sets Ninja generator, build and install directory",
      "toolchainFile": "${sourceDir}/../vcpkg/scripts/buildsystems/vcpkg.cmake",
      "inherits": [
        "base"
      ],
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl",
        "CMAKE_PREFIX_PATH": "C:/Qt/6.3.0/msvc2019_64/;${sourceDir}/CMake;"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [
            "Windows"
          ],
          "intelliSenseMode": "windows-msvc-x64",
          "disableExternalAnalysis": true,
          "enableMicrosoftCodeAnalysis": true,
          "enableClangTidyCodeAnalysis": true,
          "clangTidyChecks": "-header-filer=.* -checks=*,clang-analyzer-*,concurrency-*,cppcoreguidelines-*,modernize-*,performance-*,portability-*,readability-*"
        }
      }
    },
    {
      "name": "Linux-x64-Debug",
      "displayName": "Linux x64 Debug",
      "description": "Linux Gcc Makefiles",
      "inherits": [
        "base"
      ],
      "generator": "Unix Makefiles",
      "cacheVariables": {
        "REMOTE_DEVELOPMENT": true,
        "BUILD_UNITTESTS": true,
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": "Linux",
          "intelliSenseMode": "linux-gcc-x64"
        },
        "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
          "copyAdditionalIncludeDirectoriesList": [
            "$env{HOME}/.conan/data",
            "$env{HOME}/.generatedProto/ptcontrol"
          ],
          "copySourcesOptions": { "exclusionList": [ ".vs", ".git", "out", ".svn", ".vscode", "build" ] },
          "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
        }
      }
    }
  ],
  "buildPresets": [
    {
      "name": "Core-Build",
      "description": "Inherits environment from base confiugre Preset",
      "configurePreset": "base",
      "inheritConfigureEnvironment": true
    },
    {
      "name": "Windows-Debug-Build",
      "description": "Windows x64 Debug Build",
      "configurePreset": "Windowx-x64-MSVC",
      "configuration": "Debug",
      "inherits": "Core-Build",
      "jobs": 8,
      "verbose": true
    },
    {
      "name": "Windows-Release-Build",
      "description": "Windows x64 Release Build",
      "configurePreset": "Windowx-x64-MSVC",
      "configuration": "Debug",
      "inherits": "Core-Build",
      "jobs": 8,
      "verbose": true
    },
    {
      "name": "Linux-Verbose-Debug-Build",
      "displayName": "Linux x64 Verbose Debug Build ",
      "description": "Linux x64 Debug Build with Unix Makefile generator",
      "configurePreset": "Linux-x64-Debug",
      "inherits": "Core-Build",
      "jobs": 8,
      "verbose": true
    }
  ],
  "testPresets": [
    {
      "name": "Core-Test",
      "description": "Enable output on failure",
      "configurePreset": "base",
      "hidden": true,
      "output": {
        "outputOnFailure": true,
        "verbosity": "verbose"
      }
    },
    {
      "name": "Windows-Unittests",
      "displayName": "Windows Unit Tests",
      "configurePreset": "Windowx-x64-MSVC",
      "inherits": "Core-Test"
    },
    {
      "name": "Linux-Unittest",
      "displayName": "Linux Unittest",
      "configurePreset": "Linux-x64-Debug",
      "inherits": "Core-Test"
    }
  ]
}